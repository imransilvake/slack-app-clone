{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"airbnb"
	],
	"rules": {
		"react/jsx-filename-extension": [
			1,
			{ "extensions": [".js", ".jsx"] }
		],
		"react/prefer-stateless-function": [
			0,
			{ "ignorePureComponents": false }
		],
		"react/jsx-indent": ["error", "tab"],
		"comma-dangle": [
			"error",
			{ "functions": "ignore" }
		],
		"no-tabs": 0,
		"max-len": 0,
		"arrow-body-style": 0,
		"object-curly-newline": 0,
		"react/destructuring-assignment": 0,
		"react/no-array-index-key": 0,
		"react/prop-types": 0,
		"import/order": 0,
		"react/jsx-tag-spacing": 0,
		"jsx-a11y/click-events-have-key-events": 0,
		"operator-linebreak": 0,
		"react/no-danger": 0,
		"import/no-unresolved": "off",
		"react/jsx-indent-props": [true, "tab"],
		"react/jsx-closing-bracket-location": [true, "tag-aligned"],
		"react/jsx-one-expression-per-line": [false],
		"react/sort-comp": [1, {
			"order": [
				"lifecycle",
				"render",
				"static-methods",
				"everything-else"
			],
			"groups": {
				"lifecycle": [
					"displayName",
					"propTypes",
					"contextTypes",
					"childContextTypes",
					"mixins",
					"statics",
					"defaultProps",
					"getDefaultProps",
					"state",
					"constructor",
					"getInitialState",
					"getChildContext",
					"getDerivedStateFromProps",
					"componentDidMount",
					"componentWillMount",
					"componentWillUnmount",
					"componentDidUpdate",
					"componentDidCatch",
					"componentWillReceiveProps",
					"shouldComponentUpdate",
					"componentWillUpdate"
				]
			}
		}],
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["off", "always"]
	}
}
